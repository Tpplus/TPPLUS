<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/themebac"
    tools:context=".CreerCompteActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="15dp"
        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/idNom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_text_design"
                        android:hint="Nom..."
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/editText" />

                    <EditText
                        android:id="@+id/idPrenom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_text_design"
                        android:hint="Prénom..."
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/editText" />


                    <EditText
                        android:id="@+id/idPays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_text_design"
                        android:hint="Pays..."
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/editText" />

                    <EditText
                        android:id="@+id/idEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_text_design"
                        android:hint="Email..."
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/padding"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/editText" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/idContryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edit_text_design"
                            android:padding="6dp"
                            app:ccp_defaultNameCode="Bf" />

                        <EditText
                            android:id="@+id/idPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/edit_text_design"
                            android:hint="Numéro du téléphone..."
                            android:inputType="phone"
                            android:padding="@dimen/padding"
                            android:textColor="@color/purple_200"
                            android:textSize="@dimen/editText" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/idPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_text_design"
                        android:hint="Mot de passe"
                        android:inputType="textPassword"
                        android:padding="@dimen/padding"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/editText" />

                    <EditText
                        android:id="@+id/idConfPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_text_design"
                        android:hint="Confirmer le mot de passe..."
                        android:inputType="textPassword"
                        android:padding="@dimen/padding"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/editText" />

                    <Button
                        android:id="@+id/ConnButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="120dp"
                        android:text="Continuer"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>