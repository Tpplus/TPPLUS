<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmation_activity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/validation"
        android:layout_marginTop="23dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inscription effectuée avec succès"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#002BFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Félicitations, votre inscription au programme de formation
parallèle a été effectué avec succès;"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#090909"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votre inscription serait soumise aux règles d'admissibilité;
veuillez rester en attente,une reponse vous serait envoyé."
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:textColor="#090909"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok merci"
        android:layout_gravity="end"
        android:layout_marginTop="45dp"
        android:layout_margin="44dp"/>


</LinearLayout>